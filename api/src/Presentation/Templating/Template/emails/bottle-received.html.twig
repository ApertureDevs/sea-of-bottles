{% extends 'emails/email-layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .message-container {
            margin-top: 2rem;
            margin-bottom: 2rem;
            margin-left: auto;
            margin-right: auto;
            padding: 2rem;
            min-width: 150px;
            max-width: 900px;
            box-shadow: 0 10px 16px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19);
            border-radius: 0.2rem;
            text-align: left;
            width: fit-content;
        }
        .message-container__message {
            font-family: "Courier New", serif;
        }
    </style>
{% endblock %}

{% block main %}
    {{ parent() }}
    <p class="main__details">Hi! You received a Bottle from the Sea! The Bottle is containing the following message :</p>
    <div class="message-container">
        <span class="message-container__message">{{ message }}</span>
    </div>
{% endblock %}
